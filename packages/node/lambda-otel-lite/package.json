{
  "name": "@dev7a/lambda-otel-lite",
  "version": "0.1.0",
  "description": "Lightweight OpenTelemetry instrumentation for AWS Lambda",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./extension": {
      "types": "./dist/extension/index.d.ts",
      "default": "./dist/extension/index.js"
    },
    "./telemetry": {
      "types": "./dist/telemetry/index.d.ts",
      "default": "./dist/telemetry/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "jest -c jest.config.ts",
    "test:watch": "jest -c jest.config.ts --watch",
    "test:coverage": "jest -c jest.config.ts --coverage",
    "lint": "eslint src --ext .ts,.js"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/core": "^1.19.0",
    "@opentelemetry/resources": "^1.19.0",
    "@opentelemetry/sdk-trace-base": "^1.19.0",
    "@opentelemetry/sdk-trace-node": "^1.19.0",
    "@opentelemetry/semantic-conventions": "^1.19.0",
    "@opentelemetry/resource-detector-aws": "^1.3.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3",
    "rimraf": "^5.0.5"
  }
}
